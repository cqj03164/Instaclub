<p id="notice"><%= notice %></p>

<%= form_for(@insta3, url:confirm_insta3s_path) do |f| %>
  <% if @insta3.errors.any? %>
    <div id="error_explanation">
      <h2><%= @insta3.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @insta3.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>

  <br>


  <br>
  <%= f.label :コメント %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "投稿一覧画面にもどる", insta3s_path %>